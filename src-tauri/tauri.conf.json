{
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/logo.icns",
      "icons/logo.ico",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png"
    ],
    "targets": "all",
    "resources": [
      "../bin/rgb-lightning-node"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "createUpdaterArtifacts": true
  },
  "productName": "KaleidoSwap",
  "mainBinaryName": "KaleidoSwap",
  "version": "0.1.0",
  "identifier": "com.kaleidoswap.dev",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENFMUI2NEVGM0JDOEY3QzcKUldUSDk4Zzc3MlFiemdQcWpha25tQWlRZVJJbEJEM0VZM3RrWHNTSjZFVmN0WkgzTFhidjJkbkEK",
      "endpoints": [
        "https://github.com/kaleidoswap/desktop-app/releases/download/latest/latest.json"
      ],
      "dangerousInsecureTransportProtocol": false
    }
  },
  "app": {
    "windows": [
      {
        "center": true,
        "decorations": true,
        "focus": true,
        "fullscreen": false,
        "height": 800,
        "label": "main",
        "minHeight": 600,
        "minWidth": 800,
        "resizable": true,
        "title": "KaleidoSwap",
        "visible": false,
        "width": 1200,
        "useHttpsScheme": true
      },
      {
        "alwaysOnTop": false,
        "center": true,
        "decorations": false,
        "focus": false,
        "height": 600,
        "label": "splashscreen",
        "skipTaskbar": true,
        "url": "splashscreen.html",
        "width": 600,
        "useHttpsScheme": true,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://raw.githubusercontent.com; connect-src ipc: http://ipc.localhost 'self' http://localhost:* http://127.0.0.1:* https://* http://* ws://localhost:* wss://* ws://*;"
    }
  }
}
